= link_to "Jtbookstore", root_path, :class => 'brand'
%ul.nav
  - if user_signed_in?
    %li
      = link_to 'Logout', destroy_user_session_path, :method=>'delete'
  - else
    %li
      = link_to 'Login', new_user_session_path
  - if user_signed_in?
    %li
      = link_to 'Edit account', edit_user_registration_path
    - if current_user.has_role? :admin
      %li
        = link_to 'Admin', users_path
  - else
    %li
      = link_to 'Sign up', new_user_registration_path
= form_tag url_for(:controller => '/books', :action => 'search'), :remote => true, :class => 'navbar-search pull-left' do
  = text_field_tag 'stext' ,'', :size => 80, :class => 'search-query', :placeholder => "Search"
